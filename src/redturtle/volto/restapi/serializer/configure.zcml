    provides="plone.restapi.interfaces.IBlockFieldSerializationTransformer"/>
  <subscriber factory=".blocks.GenericResolveUIDSerializerRoot"
    provides="plone.restapi.interfaces.IBlockFieldSerializationTransformer"/>
  
